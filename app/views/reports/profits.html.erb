<%= render 'layouts/charts' %>
<%
invoices_profit = 0
invoices_tax = 0
invoices_cost = 0
invoices_price = 0
invoices_total = 0
profits = []
taxes = []
costs = []
prices = []
totals = []
%>
<div class="breadcrumbs">
  <%= link_to "My companies", "/companies" %> &raquo;
  <%= link_to @company.name, @company %> &raquo;
  <%= link_to "Reports", "/companies/reports/#{@company.id}" %>
</div>

<h1>
  <%= image_tag("reports_48.png", :class => "vmiddle") %>
  Yearly profits report - <%= @year %>
</h1>

<form method="get" action="/companies/reports/profits/<%= @company.id %>">
  <%= select_tag(:year, options_for_select(@years, @year)) %>
  <input type="submit" value="View report" class="small_btn" />
  <a href="/companies/reports/profits/<%= @company.id %>" class="small_btn">Today</a>
</form>

<br />

<div id="container_chart" class="chart"></div>

<table>
  <thead>
    <tr>
      <th class="bordered_bottom bordered_right" style="width: 70px;">
        Date
      </th>
      <th class="bordered_bottom bordered_right" style="width: 100px;">
        Cost
      </th>
      <th class="bordered_bottom bordered_right" style="width: 100px;">
        Tax
      </th>
      <th class="bordered_bottom bordered_right" style="width: 100px;">
        Profit
      </th>
      <th class="bordered_bottom bordered_right" style="width: 100px;">
        Price
      </th>
      <th class="bordered_bottom bordered_right" style="width: 100px;">
        Total
      </th>
    </tr>
  </thead>
  <tbody>
    <% for date in @dates %>
      <tr>
        <td class="bordered_bottom bordered_right">
          <%= doDate(Time.parse(date), 4) %>
        </td>
        <td class="bordered_bottom bordered_right right">
          <%
          cost = @company.get_ptc_value_date(date, "cost")
          costs.push(cost)
          invoices_cost += cost
          %>
          $<%= money(cost) %>
        </td>
        <td class="bordered_bottom bordered_right right">
          <%
          tax = @company.get_ptc_value_date(date, "tax")
          taxes.push(tax)
          invoices_tax += tax
          %>
          $<%= money(tax) %>
        </td>
        <td class="bordered_bottom bordered_right right">
          <%
          profit = @company.get_ptc_value_date(date, "profit")
          profits.push(profit)
          invoices_profit += profit
          %>
          $<%= money(profit) %>
        </td>
        <td class="bordered_bottom bordered_right right">
          <%
          price = @company.get_ptc_value_date(date, "price")
          prices.push(price)
          invoices_price += price
          %>
          $<%= money(price) %>
        </td>
        <td class="bordered_bottom bordered_right right">
          <%
          total = @company.get_ptc_value_date(date, "total")
          totals.push(total)
          invoices_total += total
          %>
          $<%= money(total) %>
        </td>
      </tr>
    <% end %>
    <tr>
      <td class="bordered_bottom bordered_right bold">
        Total:
      </td>
      <td class="bordered_bottom bordered_right right bold">
        $<%= money(invoices_cost) %>
      </td>
      <td class="bordered_bottom bordered_right right bold">
        $<%= money(invoices_tax) %>
      </td>
      <td class="bordered_bottom bordered_right right bold">
        $<%= money(invoices_profit) %>
      </td>
      <td class="bordered_bottom bordered_right right bold">
        $<%= money(invoices_price) %>
      </td>
      <td class="bordered_bottom bordered_right right bold">
        $<%= money(invoices_total) %>
      </td>
    </tr>
  </tbody>
</table>

<br />

<div class="button">
  <%= link_to "Back", "/companies/reports/#{@company.id}" %>
</div>

<script type="text/javascript"> 
$(document).ready(function() {
	var chart = new Highcharts.Chart({
		chart: {
			renderTo: 'container_chart',
			defaultSeriesType: 'line',
			margin: [50, 40, 70, 70]
		},
		title: {
			text: 'Yearly profits report',
			style: {
				margin: '10px 100px 0 0' // center it
			}
		},
		subtitle: {
			text: '<%= @year %>',
			style: {
				margin: '0 100px 0 0' // center it
			}
		},
		xAxis: {
			categories: [
			  <%= @months_cats.join(",") %>
			],
			title: {
				text: 'Month'
			},
			labels: {
				rotation: -90, 
				y: 34, 
				style: {
					fontSize: '8pt'
				}
			}
		},
		yAxis: {
			title: {
				text: 'Value'
			},
			plotLines: [{
				value: 0,
				width: 1,
				color: '#808080'
			}]
		},
		tooltip: {
			formatter: function() {
				return '<b>'+ this.series.name +'</b><br/>'+
				this.x +': '+ this.y;
			}
		},
		legend: {
			layout: 'vertical',
			style: {
				left: 'auto',
				bottom: 'auto',
				right: '10px',
				top: '100px'
			}
		},
		credits: {
			enabled: false
		},
		series: [
			{
				name: 'Profit',
				data: [
					<%= profits.join(",") %>
				]
			},
			{
				name: 'Tax',
				data: [
					<%= taxes.join(",") %>
				]
			},
			{
				name: 'Cost',
				data: [
					<%= costs.join(",") %>
				]
			},
			{
				name: 'Price',
				data: [
					<%= prices.join(",") %>
				]
			},
			{
				name: 'Total',
				data: [
					<%= totals.join(",") %>
				]
			}
		]
	});
});
</script>