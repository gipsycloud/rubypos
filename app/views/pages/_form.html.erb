<%= form_for(@page) do |f| %>
  <% if @page.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= @page.errors.count %>
        <%= I18n.translate "error", :count => @page.errors.count %>:
      </h2>

      <ul>
      <% @page.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :title_clean %><br />
    <%= f.text_field :title_clean %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content, :style => "width: 700px; height: 400px;" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
