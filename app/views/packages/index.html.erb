<h1>
  Packages
</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Slug</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @packages.each do |package| %>
  <tr>
    <td><%= package.title %></td>
    <td><%= package.slug %></td>
    <td><%= package.price %></td>
    <td><%= link_to 'Show', package %></td>
    <td><%= link_to 'Edit', edit_package_path(package) %></td>
    <td><%= link_to 'Destroy', package, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<div class="button">
  <%= link_to 'New Package', new_package_path %>
</div>