<div class="breadcrumbs">
  <%= link_to "Pricing", "/pricing" %>
</div>

<h1>
  Review your package
</h1>

<div class="big">
  <strong>Selected package:</strong>
  <br />
  <%= @package.title %>
</div>
<br />

<div class="big">
  <strong>Price:</strong>
  <br />
  $<%= money(@package.price) %>/year
</div>
<br />

<div>
  <%= markdown(@package.description).html_safe %>
</div>

<div class="button">
  <% if(@package.price == 0) %>
    <%= link_to 'Choose package', '/payment/' + @slug %>
  <% else %>
    <%= link_to 'See payment methods', '/payment/' + @slug %>
  <% end %>
  <%= link_to 'Back', '/pricing' %>
</div>